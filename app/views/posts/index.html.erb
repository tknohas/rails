<h3>予定一覧</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
 <% end %>

 <table>
   <thead>
     <tr>
       <th>ID</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>更新日時</th>
			 <th>詳細</th>
			 <th>編集</th>
			 <th>削除</th>
     </tr>
   </thead>
 
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= post.id %></td>
         <td><%= post.title %></td>
         <td><%= post.start %></td>
         <td><%= post.end_date %></td>
         <td>
				 	<% if post.all_day %>
						<strong>○</strong>
					<% end %>
				 </td>
         <td><%= post.updated_at.to_s(:datetime_jp) %></td>
				 <td><%= link_to "詳細", post %></td>
				 <td><%= link_to "編集", [:edit, post] %></td>
				 <td><%= link_to "削除", post, method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
<div class="Footer_body">
	<p class="date">本日の日付 <%= Date.current.strftime('%Y/%m/%d') %></p>
	<P class="count">予定の合計 <%= Post.count %></p>
</div>
<p><%= link_to "新規追加", :new_post	%></p>

