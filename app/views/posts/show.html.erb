<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>開始日</th>
    <td><%= @post.start %></td>
  </tr>
  <tr>  
    <th>終了日</th>
    <td><%= @post.end %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @post.all_day %>
        <strong>○</strong>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "予定一覧に戻る", :posts %></li>
  </ul>
</div>